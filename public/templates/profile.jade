        label.control-label(for="smoking") 喫煙習慣
        div.controls
          select(name="smoking",id="smoking")
            - options = ["---","よく吸う","たまに吸う","まったく吸わない"]
            - each item, num in options
              - if (profile.smoking ==  num)
                  option(selected, value=num)= item
              - else
                  option(value=num)= item
      div.control-group
        label.control-label(for="hoby") 趣味
        div.controls
          textarea.span4(rows="3", id="hoby", name="hoby")
            = profile.hoby
      div.control-group
        label.control-label(for="like") 好きなもの
        div.controls
          input.span2(type='text', id='like', name='like', value="#{profile.like}")
      div.control-group
        label.control-label(for="message") お相手へのメッセージ
        div.controls
          textarea.span5(rows="3", id='message', name='message')
            = profile.message
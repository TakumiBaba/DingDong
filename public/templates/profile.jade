      div.control-group
        label.control-label(for="income") 年収
        div.controls
          input(type='text', name="income",  id='income', value="#{profile.income}")
          span.help-inline 万円
      div.control-group
        label.control-label(for="education") 学歴
        div.controls
          select(name="education",id="education")
            - options = ["---","中学卒","高校卒","短大卒","大卒","大学院卒","その他","指定しない"]
            - each item, num in options
              - if (profile.education ==  num)
                  option(selected, value=num)= item
              - else
                  option(value=num)= item
      div.control-group
        label.control-label(for="bloodType") 血液型
        div.controls
          select(name="bloodType",id="bloodType")
            - options = ["---","A","B","O",'AB']
            - each item, num in options
              - if (profile.bloodType ==  num)
                  option(selected, value=num)= item
              - else
                  option(value=num)= item
      div.control-group
        label.control-label(for="height") 身長

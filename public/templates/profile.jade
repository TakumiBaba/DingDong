div.box-green.navbar
  div.box-title.green
    h3 自分のプロフィール
  div.box-inner.container
    form.form-horizontal(method="POST", action="/profile")
      div.control-group
        label.control-label(for="birthday") 生年月日
        div.controls
          select(name="birthday_year",id="birthday_year").span2
            -for(var i=1954;i<=1992;i++){
              if(i == (new Date(profile.birthday)).getFullYear())
                option(selected) #{i}
              else
                option #{i}
             - }
          年
          select(name="birthday_month",id="birthday_month").span1
            -for(var i=1;i<=12;i++){
              if(i == ((new Date(profile.birthday)).getMonth()+1))
                option(selected) #{i}
              else
                option #{i}
            - }
          月
          select(name="birthday_day",id="birthday_day").span1
            -for(var i=1;i<=31;i++){
              if(i == (new Date(profile.birthday)).getDate())
                option(selected) #{i}
              else
                option #{i}
            - }
          日
      div.control-group
        label.control-label(for="marital") 婚姻歴
        div.controls
          select(name="havingMarried",id="havingMarried")
            - options = ["独身","離婚","死別"]
            - each item in options
              - if (item == profile.havingMarried)
                  option(selected)= item
              - else
                  option= item
      div.control-group
        label.control-label(for="hasChild") 子どもの有無
        div.controls
          select(name="havingChild",id="havingChild")
            - options = ["いない","別居","同居","死別","指定しない"]
            - each item in options
              - if (item == profile.havingChild)
                  option(selected)= item
              - else
                  option= item
      div.control-group
        label.control-label(for="preferredTime") 結婚希望時期
        div.controls
          select(name="wantMarriage",id="wantMarriage")

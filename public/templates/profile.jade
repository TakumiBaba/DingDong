div.box-green.navbar
  div.box-title.green
    h3 自分のプロフィール
  div.profile.box-inner.container
    form.form-horizontal
      div.control-group
        label.control-label(for='profile-image') プロフィール画像
        div.controls
          img#profile-image(style="width:100px; height:100px")
          ul.profile-image-list
      div.control-group
        label.control-label(for="marital") 婚姻歴
        div.controls
          select(name="havingMarried",id="havingMarried")
            - options = ["---","なし","あり"]
            - each item, num in options
              - if (profile.martialHistory == num)
                  option(selected, value=num)= item
              - else
                  option(value=num)= item
      div.control-group
        label.control-label(for="hasChild") 子どもの有無
        div.controls
          select(name="hasChild",id="hasChild")
            - options = ["---","いない","いる(別居)","いる(同居)"]
            - each item, num in options
              - if (profile.hasChild == num)
                  option(selected, value=num)= item
              - else
                  option(value=num)= item
      div.control-group
        label.control-label(for="preferredTime") 結婚希望時期
        div.controls
          select(name="wantMarriage",id="wantMarriage")
            - options = ["---","すぐにでも","2〜3年のうちに","お相手に合わせる","特に決めてない"]
            - each item, num in options
              - if (profile.wantMarriage ==  num)
                  option(selected, value=num)= item
              - else
                  option(value=num)= item
      div.control-group
        label.control-label(for="preferredChild") 子どもの希望
        div.controls
          select(name="wantChild",id="wantChild")
            - options = ["---","結婚したら欲しい","お相手と相談したい","いなくても構わない","欲しくない","特に決めてない"]
            - each item, num in options
              - if (profile.wantChild ==  num)
                  option(selected, value=num)= item
              - else
                  option(value=num)= item
      div.control-group

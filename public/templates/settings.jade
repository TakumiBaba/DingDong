  div.settings.box-inner.container
    form.form-horizontal()
      div.control-group
        label.control-label(for="birthday") 年齢
        div.controls
          input.span2(type='number', name='ageMin', id='ageMin', value="#{partner_requirements.ageMin}")
          span.help-inline から
          input.span2(type='number', name='ageMax', id='ageMax', value="#{partner_requirements.ageMax}")
          span.help-inline まで
      div.control-group
        label.control-label(for="martial_history") 婚姻歴
        div.controls
          select(name="martial_history",id="martial_history", multiple="multiple")
            - options = ["指定しない","独身","離婚","死別"]
            - each item, num in options
              - if (_.include(partner_requirements.martialHistory, num))
                  option(selected, value=num)= item
              - else
                  option(value=num)= item
